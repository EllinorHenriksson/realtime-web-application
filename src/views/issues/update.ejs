<h2>Update issue</h2>

<form method="post" action="./issues/<%= id %>/update">
  <label for="form-title">Title: </label>
  <input type="text" name="title" id="form-title" value="<%= title %>" required autofocus />
  <label for="form-decription">Description: </label>
  <textarea name="description"  id="form-description" cols="30" rows="10"><%= description %></textarea>
  <% if (state === 'opened') { %>
    <input type="checkbox" name="closed" id="closed"/>
    <label for="closed">Close issue</label>
  <% } else if (state === 'closed') { %>
    <input type="checkbox" name="opened" id="opened"/>
    <label for="opened">Open issue</label>
  <% } %>
  <div>
    <button type="submit">Update</button>
    <a href="./issues">Cancel</a>
  </div>
</form>